package assignment3_mit;

import java.util.ArrayList;
import java.util.Arrays;

public class Student {
	
	ArrayList<String> studentID = new ArrayList<String>();
	String studenName;
	
	public Student() {
		// TODO Auto-generated constructor stub
		studenName = "TBA";
	}
	
	@Override
	public String toString() {
		return "\nStudent ID: " + Arrays.toString(studentID.toArray()).replace("[", "").replace("]", "") + " \nStudent Name: " + studenName;
	}

	public int setStudentID(String studentID) {
		int returnID;
		if (studentID.isEmpty())
			returnID = 1;
		else if (!this.studentID.contains(studentID)) {
			// System.out.println(this.studentID.contains(studentID));
			this.studentID.add(studentID);
			returnID = 3;
		}
		else {
			returnID = 2;
		}
		return returnID;
	}
	
	public ArrayList<String> getStudentID() {
		return studentID;
	}
	
	public boolean setStudenName(String studenName) {
		if (!(studenName.isEmpty())) {
			this.studenName = studenName;
			return true;
		} 
		
		return false;
	}
	
	public String getStudenName() {
		return studenName;
	}
	
}
